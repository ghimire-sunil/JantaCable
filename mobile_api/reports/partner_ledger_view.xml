<odoo>
    <data>
        <record id="action_customer_partner_ledger" model="ir.actions.report">
            <field name="name">Customer Partner Ledger</field>
            <field name="model">account.move.line</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">mobile_api.customer_partner_ledger_report</field>
            <field name="report_file">mobile_api.customer_partner_ledger_report</field>
            <field name="binding_model_id" eval="False"></field>
            <field name="binding_type">report</field>
        </record>

        <template id="customer_partner_ledger_report">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 align="center">Partner Ledger</h2>
                        <h5 align="center">Customer: <t t-esc="data['customer_name']" /></h5>
                        <br />
                        <div>
                            <table class="table" width='100%'>
                                <thead>
                                    <tr>
                                        <th style='border: 1px solid black;text-align:center;'>Date</th>
                                        <th style='border: 1px solid black;text-align:center;'>Journal Entry</th>
                                        <th style='border: 1px solid black;text-align:center;'>Label</th>
                                        <th style='border: 1px solid black;text-align:center;'>Debit</th>
                                        <th style='border: 1px solid black;text-align:center;'>Credit</th>
                                        <th style='border: 1px solid black;text-align:center;'>Balance</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- <t t-set="total_debit" t-value="0" />
                                    <t t-set="total_credit" t-value="0" /> -->
                                    <t t-foreach="data['lines']" t-as="line">
                                        <!-- <t t-set="total_debit" t-value="total_debit + line['debit']" />
                                        <t t-set="total_credit" t-value="total_credit + line['credit']" /> -->
                                        <tr>
                                            <td style='border: 1px solid black;text-align:center;'>
                                                <t t-esc="line['journal_date']" />
                                            </td>
                                            <td style='border: 1px solid black;text-align:center;'>
                                                <t t-esc="line['journal_entry']" />
                                            </td>
                                            <td style='border: 1px solid black;text-align:center;'>
                                                <t t-esc="line['label']" />
                                            </td>
                                            <td style='border: 1px solid black;text-align:center;'>
                                                <t t-esc="line['debit']" />
                                            </td>
                                            <td style='border: 1px solid black;text-align:center;'>
                                                <t t-esc="line['credit']" />
                                            </td>
                                            <td style='border: 1px solid black;text-align:center;'>
                                                <t t-esc="line['balance']" />
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td style='border: 1px solid black;text-align:center;' colspan='3'>
                                            Total
                                        </td>
                                        <td style='border: 1px solid black;text-align:center;'>
                                            <t t-esc="data['total_debit']" />
                                        </td>
                                        <td style='border: 1px solid black;text-align:center;'>
                                            <t t-esc="data['total_credit']" />
                                        </td>
                                        <td style='border: 1px solid black;text-align:center;'>
                                            <t t-esc="data['total_balance']" />
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>