<odoo>
    <record id="distributor_achievement_report_view_list" model="ir.ui.view">
        <field name="name">distributor.achievement.report.view.list</field>
        <field name="model">distributor.achievement.report</field>
        <field name="arch" type="xml">
            <list create="0" delete="0" type="object">
                <field name="user_id"/>
                <field name="plan_id"/>
                <field name="date_to"/>
                <field name="target_id"/>
                <field name="store_target"/>
                <field name="case_target"/>
                <field name="achieved_case_target"/>
            </list>
        </field>
    </record>

    <record id="distributor_achievement_report_view_pivot" model="ir.ui.view">
        <field name="name">distributor.commission.achievement.report.view.pivot</field>
        <field name="model">distributor.achievement.report</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="target_id" type="row"/>
                <!-- <field name="achieved" type="col"/>
                <field name="achieved" type="measure"/> -->
            </pivot>
        </field>
    </record>

    <record id="distributor_achievement_report_view_graph" model="ir.ui.view">
        <field name="name">distributor.commission.achievement.report.view.graph</field>
        <field name="model">distributor.achievement.report</field>
        <field name="arch" type="xml">
            <graph>
                <field name="plan_id" type="row"/>
                <field name="user_id" type="row"/>
                <!-- <field name="target_id" type="col"/>
                <field name="achieved" type="measure"/> -->
            </graph>
        </field>
    </record>

