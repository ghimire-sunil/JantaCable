<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_inherited" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.account.manual.payment</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="0" />
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='qr_code_invoices']" position="after">
                <setting company_dependent="1" string="Manual Payment" name="manual_pament">
                    <field name="manual_payment"/>
                </setting>
            </xpath>
        </field>
    </record>

</odoo>