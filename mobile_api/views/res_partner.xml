<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_res_partner_form_inherited" model="ir.ui.view">
        <field name="name">view.res.partner.form.inherited</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object"
                    name="action_view_location"
                    class="oe_stat_button" icon="fa-map-marker">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Location</span>
                    </div>
                </button>
            </xpath>
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="registration_number"/>
                <field name="dealer_reference"/>
            </xpath>
            <xpath expr="//field[@name='license_number']" position="after">
                <field name="distributor_id"/>
            </xpath>
            <xpath expr="//field[@name='days_sales_outstanding']" position="after">
                <label for="credit_limit_span" string="Credit Limit Span"/>
                <div>
                    <field name="credit_limit_span" class="oe_inline"/> Days
                </div>
            </xpath>
            <xpath expr="//page[@name='internal_notes']" position="after">
                <page name="private_label" string="Private Label">
                    <group>
                        <field name = "private_label"/>
                        <field name = "artwork_reference" widget="image" invisible="not private_label"/>
                        <field name = "min_order_qty_check" invisible="not private_label"/>
                        <field name = "lead_time_note" invisible="not private_label"/>
                        <field name = "packaging_notes" invisible="not private_label"/>
                    </group>
                </page>
            </xpath>
        </field>    
    </record>

</odoo>