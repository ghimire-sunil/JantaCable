<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_partner_location" model="ir.actions.act_window">
        <field name="name">Partner Location</field>
        <field name="res_model">partner.location</field>
        <field name="view_mode">list,map</field>
        <field name="context">{'default_partner_id': active_id}</field>
    </record>

    <record id="view_partner_location_list" model="ir.ui.view">
        <field name="name">partner.location.list</field>
        <field name="model">partner.location</field>
        <field name="arch" type="xml">
            <list string="Partner Location" default_order="date desc">
                <field name="date" />
                <field name="partner_id" />
                <field name="latitude" />
                <field name="longitude" />
            </list>
        </field>
    </record>

    <record id="partner_location_view_map" model="ir.ui.view">
            <field name="name">partner.location.view.map</field>
            <field name="model">partner.location</field>
            <field name="arch" type="xml">
                <map res_partner="partner_id">
                    <field name="partner_id" string="Customer"/>
                </map>
            </field>
        </record>

</odoo>