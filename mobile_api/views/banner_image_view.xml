<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="banner_image_action" model="ir.actions.act_window">
        <field name="name">banner.image</field>        
        <field name="res_model">banner.image</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem
        name="Banner Image"
        id="menu_banner_image"
        action="banner_image_action"
        parent="website.menu_content"
    />

    <record id="banner_image_view_list" model="ir.ui.view">
        <field name="name">banner.image.view.list</field>
        <field name="model">banner.image</field>
        <field name="arch" type="xml">
            <list string="Banner Image">
                <field name="name"/>
                <field name="sequence" />
                <field name="url" />
                <field name="start_date" />
                <field name="end_date" />
                <field name="published" />
                <field name="image_1920" widget="image" class="oe_avatar"/>   
            </list>
        </field>
    </record>


    <record id="banner_image_view_form" model="ir.ui.view">
        <field name="name">banner.image.view.form</field>
        <field name="model">banner.image</field>
        <field name="arch" type="xml">
            <form string="Banner Image">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sequence" />
                            <field name="url" />
                            <field name="start_date" />
                            <field name="end_date" />
                            <field name="published" />
                            <field name="image_1920" widget="image" options="{'accepted_file_extensions': '.jpg,.jpeg,.png,.webp,.tiff,.tif'}"/>
                        </group>
    
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

</odoo>