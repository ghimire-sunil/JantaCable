<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- PDC Wizard -->
    <record id="sh_vendor_pdc_wizard_form_wizard" model="ir.ui.view">
        <field name="name">sh.pdc.wizard</field>
        <field name="model">pdc.wizard</field>
        <field name="arch" type="xml">
        <form string="PDC Payment">
                <header>
                    <button name="action_register" class="oe_highlight" invisible="state != 'draft'" string="Register" type="object" />
                    <button name="action_returned" class="oe_highlight" invisible="state != 'registered'" string="Return" type="object" />
                    <button name="action_deposited" class="oe_highlight" invisible="state not in ['registered','returned','bounced']" string="Deposit" type="object" />
                    <button name="action_recorded" class="oe_highlight" invisible="state not in ['registered','draft','returned']" string="Recorded" type="object" />
                    <button name="action_bounced" class="oe_highlight" invisible="state != 'deposited'" string="Bounce" type="object" />
                    <button name="action_done" class="oe_highlight" invisible="state != 'deposited'" string="Done" type="object" />
                    <button name="action_set_draft" class="oe_highlight" invisible="state not in ['registered','cancel']" string="Reset to Draft" type="object" />
                    <button name="action_cancel" class="oe_highlight" invisible="state == 'cancel'" string="Cancel" type="object" />


                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="open_attachments" class="oe_stat_button" icon="fa-cloud-upload" type="object" string="Attachments"></button>
                        <button name="open_journal_items" class="oe_stat_button" icon="fa-list" type="object" string="Journal Items"></button>
                        <button name="open_journal_entry" class="oe_stat_button" icon="fa-list" type="object" string="Journal Entry"></button>
                    </div>

                    <group>
                        <group>
                            <field name="name" readonly="1" />
                            <field name="payment_type" invisible="1" widget="radio" />
                            <field name="currency_id" invisible="1" />
                            <field name="partner_id" readonly="state not in ['draft','bounced','returned']" />
                            <field name='company_id' invisible="1"/>
                            <field name="payment_amount" widget="monetary" readonly="state not in ['draft','bounced','returned']" />
                            <field name="reference" readonly="state not in ['draft','bounced','returned']" />
                            <field name="cheque_type" readonly="state not in ['draft','bounced','returned']"/>
                            <field name="custody_contact_id"/>
                            <field name="journal_id" options="{'no_create':1,'no_create_edit':1}" readonly="state not in ['draft','bounced','returned']" />
                        </group>
                        <group>
                            <field name="payment_date" readonly="state not in ['draft','bounced','returned']" />
                            <field name="due_date" invisible="cheque_type !='pdc'" required = "cheque_type =='pdc'" readonly="state not in ['draft','bounced','returned']" />
                            <field name="memo" readonly="state not in ['draft','bounced','returned']" />
                            <field name="agent" readonly="state not in ['draft','bounced','returned']" />
                            <field name="bank_id" readonly="state not in ['draft','bounced','returned']" />
                            <field name = "done_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string = "Bills">
                            <field name = "account_move_ids" invisible = "1"/>
                            <field name = "invoice_ids" domain="[('id','in',account_move_ids)]" readonly="state not in ['draft','bounced','returned']"/>
                        </page>
                        <page string="Attachments">
                            <field name="attachment_ids" widget="many2many_binary"/>

                        </page>

                    </notebook>
                </sheet>
                <!-- <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div> -->
                <chatter reload_on_attachment="True"/>
            </form>
