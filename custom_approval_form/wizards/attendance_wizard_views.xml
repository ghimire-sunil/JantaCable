<odoo>
    <record id="view_attendance_wizard_form" model="ir.ui.view">
        <field name="name">attendance.wizard.form</field>
        <field name="model">attendance.wizard</field>
        <field name="arch" type="xml">
            <form string="Attendance Wizard">
                <group>
                    <field name="employee_ids" widget="many2many_tags"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button string="Generate" type="object" name="attendance_pdf_report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_attendance_wizard" model="ir.actions.act_window">
        <field name="name">Attendance Report</field>
        <field name="res_model">attendance.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_attendance_wizard"
          name="Attendance Report"
          parent="hr_attendance.menu_hr_attendance_root"
          action="action_attendance_wizard"
          sequence="10"/>

</odoo>