<odoo>
   <data>
       <record id="resignation_email_template_name" model="mail.template">
           <field name="name">Resignation Email</field>
           <field name="model_id" ref="custom_approval_form.model_hr_departure_wizard"/>
           <field name="subject">For Resignation</field>
           <field name="email_from">{{ (object.env.user.email) }}</field>
           <field name="email_to">{{ object.employee_id.work_email }}</field>
           <field name="description">Description</field>
           <field name="body_html" type="html">
              <div class="text-start">
                For your Resignation
              </div>
           </field>
       </record>
   </data>
</odoo>