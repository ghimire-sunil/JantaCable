<?xml version="1.0" encoding="utf-8"?>
<odoo>  
    <record id="action_report_print_ird" model="ir.actions.report">
        <field name="name">Materialized Report</field>
        <field name="model">ird.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">nepali_ird_integration.report_ird</field>
        <field name="report_file">nepali_ird_integration.report_ird</field>
        <field name="print_report_name">'Materialized Report</field>
        <field name="binding_model_id" ref="model_ird_report"/>
        <field name="paperformat_id" ref="nepali_ird_integration.paperformat_euro_landscapes"/>
     </record>
        <template id="report_ird">
            <t t-call="web.html_container">
                    <t t-call="web.external_layout">
                        <div class="page">
                        <h2>Materialized View</h2>
                        <!-- <t t-set="result" t-value="data[0]"/> -->
                        <!-- <t t-out="result"/> -->
                            <table width="100%" border="2" font-weight="bold" style="font-size: 12px">
                                <thead>
                                    <tr>
                                        <th>FY</th>
                                        <th>Inv no</th>
                                        <th>Inv Date</th>
                                        <th>Customer Name</th>
                                        <th>Pan</th>
                                        <th>Basic Amt</th>
                                        <th>Discount</th>
                                        <th>Taxable Amt</th>
                                        <th>Tax</th>
                                        <th>Total Amt</th>
                                        <th>Sync State</th>
                                        <th>Print State</th>
                                        <th>Active</th>
                                        <th>Last Printed</th>
                                        <th>Entered By</th>
                                        <th>Is realtime</th>
                                        <th>Printed By</th>
                                        <th>Payment Method</th>
                                        <th>VAT Refund Amount (if any)</th>
                                        <th>Transaction Amount (if any)</th>
                                    </tr>
                                </thead>
                                 <tbody>   
                                 <t t-set="result" t-value="data"/>
                                <tr t-foreach="result" t-as="l">
                                <td><span t-esc="l['fy']"/></td>
                                <td><span t-esc="l['number']"/></td>
                                <td><span t-esc="l['date']"/> (<span t-esc="l['nepali_date']"/>)</td>
                                <td><span t-esc="l['name']"/></td>
                                <td><span t-esc="l['vat']"/></td>
                                <td><span t-esc="l['amount_untaxed']"/></td>
                                <td><span t-esc="l['amount_discount']"/></td>
                                <td><span t-esc="l['amount_untaxed']"/></td>
                                <td><span t-esc="l['amount_tax']"/></td>
                                <td><span t-esc="l['amount_total']"/></td>
                                <td>
                                    <t t-if="l['bill_post']">
                                        True
                                    </t>
                                    <t t-else="">
                                        False
                                    </t>
                                </td>
                                <td>
                                    <t t-if="l['printed_count'] > 0">
                                        Printed
                                    </t>
                                    <t t-else="">
                                        Not Printed
                                    </t>
                                </td>
                                <td> 
                                        <t t-if="l['printed_count'] > 0">
                                        Active
                                    </t>
                                    <t t-else="">
                                        Inactive
                                    </t>
                                </td>
                                <td><span t-esc="l['last_printed']"/></td>
                                <td><span t-esc="l['user_id']"/></td>
                                <td>
                                    <t t-if="l['is_realtime']">
                                        True
                                    </t>
                                    <t t-else="">
                                        False
                                    </t>
                                </td>                                    
                                <td><span t-esc="user.name"></span></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>
            </t>
        </template>
</odoo>
