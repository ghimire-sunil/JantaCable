<odoo>
    <record id="view_sales_book_annex_list" model="ir.ui.view">
        <field name="name">sales.book.annex.list</field>
        <field name="model">account.move.line</field>
        <field name="arch" type="xml">
            <list create = "0">
                <header>
                    <button name="%(nepali_ird_integration.action_open_ng_sale_wizard_form)d" string="Sales Book [Annex 13]" type="action" class="btn-primary" display = "always"
                    context="{'default_type': 'sales_report'}"/>   
                </header>
                <field name = "nepali_date" string = "Date(B.S.)" />
                <field name = "invoice_date" string = "Date(A.D.)" />
                <field name = "invoice_number" string="Bill No."/>
                <field name = "customer_name" string="Buyer's Name"/>
                <field name = "buyer_pan" string = "Buyer's PAN No."/>
                <field name = "product_name" string = "Product Name" />
                <field name = "quantity" string = "Quantity"/>
                <field name = "product_uom_id" string = "UOM"/>
                <field name = "price_total" string = "Total Sales" sum = "Total Amount"/>
                <field name = "amount_tax" string = "Taxable Amount" sum = "Taxable Amount"/>
                <field name = "tax" string = "Tax" sum = "Tax"/>
                <field name = "country_id" string = "Country"/>
                <field name = "pragyapan_patra" string = "Pragyapan Patra Number "/>
                <field name = "pragyapan_patra_date" string = "Pragyapan Patra Date"/>
                <field name = "currency_id" column_invisible = "1"/>
            </list>
        </field>
    </record>
    <record id="action_sales_book_annex" model="ir.actions.act_window">
        <field name="name">Sales Book [Annex 13]</field>
        <field name="res_model">account.move.line</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_sales_book_annex_list')})]"/>
        <field name="domain">[('move_type', '=', 'out_invoice'),('product_name', '!=', False)]</field>
    </record>
    <menuitem name="Sales Book [Annex 13]" id="menu_sales_book_annex" parent="ird_sale_report_menu" action="action_sales_book_annex" />
</odoo>

