<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="view_move_form_inherit_form" model="ir.ui.view">
            <field name="name">account.move.view.form.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_reverse']" position="replace">
                    <button name="action_reverse" string='Credit Note' type='object' groups="account.group_account_invoice" invisible="move_type not in ('out_invoice') or state != 'posted'" data-hotkey="shift+n"/>
                    <button name="action_reverse" string='Debit Note' type='object' groups="account.group_account_invoice" invisible="move_type not in ('in_invoice') or state != 'posted'" data-hotkey="shift+n"/>
                </xpath>
            </field>
        </record>

    </data>


</odoo>
