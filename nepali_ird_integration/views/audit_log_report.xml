<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form to select the salesperson, start date, and end date -->
        <record id="audit_log_wizard_form" model="ir.ui.view">
            <field name="name">Audit Log Report in Excel Format</field>
            <field name="model">audit.log.wizard</field>
            <field name="arch" type="xml">
                <form string="Audit Log Report in Excel Format">
                    <group>
                        <group>
                            <field name="start_date" required="1"/>
                            <field name="end_date" required="1"/>
                            <field name="company_id" readonly="1"/>
                        </group>
                    </group>
                    <footer>
                        <!-- a button to start the download process -->
                        <button name="get_excel_report" string="Export (XLS)" type="object"
                                class="btn-primary"/>
                        <!-- a cancel button to close the form -->
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <!-- the action to open the form above -->
        <record model="ir.actions.act_window" id="action_open_audit_log_wizard_form">
            <field name="name">Audit Log Report in Excel Format</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">audit.log.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <!-- The menu item in Sale >> Reporting menu, to invoke the above action, so the user can see the form -->

        <menuitem name="Audit Log Report"
                id="menu_audit_log_in_excel"
                parent="ird_report_menu"
                action="action_open_audit_log_wizard_form" 
                sequence="4"/>
    </data>
</odoo>