<odoo>
    <record id="view_purchase_book_list" model="ir.ui.view">
        <field name="name">purchase.book.list</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <list create = "0">
                <header>
                    <button name="%(nepali_ird_integration.action_open_ng_sale_wizard_form)d" string="Purchase Book" type="action" class="btn-primary" display = "always"
                    context="{'default_type': 'in_invoice'}"/>   
                </header>
                <field name = "nepali_date" string = "Date(B.S.)" />
                <field name = "invoice_date" string = "Date(A.D.)" />
                <field name = "name" string="Bill No."/>
                <field name = "invoice_partner_display_name" string="Seller's Name"/>
                <field name = "buyer_pan" string = "Seller's PAN No."/>
                <field name = "amount_total" string = "Total Sales" sum = "Total Amount"/>
                <field name = "non_taxable_sales" string = "Non Taxable Sales" sum = "Non Taxable Sales"/>
                <field name = "export_sales" string = "Export Sales" sum = "Export Sales"/>
                <field name = "amount_discount" sum = "Amount Discount"/>
                <field name = "amount_untaxed" string ="Taxable Amount" sum="Taxable Amount"/>
                <field name = "amount_tax" string = "Tax Amount" sum = "Tax Amount"/>
                <field name = "currency_id" column_invisible = "1"/>
            </list>
        </field>
    </record>
    <record id="action_purchase_book" model="ir.actions.act_window">
        <field name="name">Purchase Book</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_purchase_book_list')})]"/>
        <field name="domain">[('move_type', '=', 'in_invoice')]</field>
    </record>
    <menuitem id = "ird_purchase_report_menu" name="Purchase Report" parent="ird_report_menu"/>
    <menuitem name="Purchase Book" id="menu_purchase_book" parent="ird_purchase_report_menu" action="action_purchase_book" />
</odoo>

