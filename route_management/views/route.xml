<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="partner_route_action" model="ir.actions.act_window">
            <field name="name">Customer Route</field>
            <field name="path">route</field>        
            <field name="res_model">partner.route</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="partner_route_view_list" model="ir.ui.view">
            <field name="name">customer.route.view.list</field>
            <field name="model">partner.route</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" />           
                    <field name="code" />   
                </list>
            </field>
        </record>


        <record id="partner_route_view_form" model="ir.ui.view">
            <field name="name">partner.route.view.form</field>
            <field name="model">partner.route</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <field name="active" invisible="1"/>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="action_view_partner" icon="fa-star">
                                <field string="Customers" name="partner_counts" widget="statinfo"/>
                            </button>
                        </div>
                        <group>
                            <field name="name" />
                            <field name="code" />
                            <field name="parent_id"/>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>
    </data>

    <record id="action_outlet_types" model="ir.actions.act_window">
        <field name="name">Outlet Types</field>
        <!-- <field name="path">route</field>         -->
        <field name="res_model">outlet.type</field>
        <field name="view_mode">list</field>
    </record>

    <record id="outlet_type_view_list" model="ir.ui.view">
        <field name="name">outlet.type.view.list</field>
        <field name="model">outlet.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" /> 
            </list>
        </field>
    </record>

</odoo>