<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- report master template -->
    <template id="thermal_common_master_template_payment">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <t t-if="not o" t-set="o" t-value="doc" />
                <t t-if="not company">
                    <!-- Multicompany -->
                    <t t-if="company_id">
                        <t t-set="company" t-value="company_id" />
                    </t>
                    <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                        <t t-set="company" t-value="o.company_id.sudo()" />
                    </t>
                    <t t-else="else">
                        <t t-set="company" t-value="res_company" />
                    </t>
                </t>
                <t t-foreach="docs" t-as="doc">
                    <t t-call="custom_payment_ledger.thermal_customer_payment_ledger"/>
                </t>

            </t>
        </t>
    </template>

    <!-- Payment Ledger -->
    <template id="thermal_customer_payment_ledger" name="usa_commercial">
        <t t-set="data" t-value="doc.payment_ledger()"/>
        <div class="page" >

            <style>
                body, .page, .row, .col-6, span, div, p {
                    font-size: 8px !important;
                    line-height: 1.2;
                }

                h {
                    font-size: 8px !important;
                }
                .thermal-table {
                    font-size: 7px;
                    width: 80%;
                    border-collapse: collapse;
                }
                .thermal-table th,
                .thermal-table td {
                    padding: 2px 2px;
                    text-align: left;
                    word-wrap: break-word;
                }
            </style>

            <div>
                <div >
                    <div class="text-center">
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height:50px; width:50px;" alt="Logo" />
                    </div>
                </div>
                <div class="text-center">
                    <div class=" text-center" style="font-weight: bold; ">
                        <h style="font-size: 20px;">
                            <t t-out="env.company.name"/>
                        </h>
                        <p>
                            <t t-out="company.street"/>
                            <t t-out="company.city"/>
                            <t t-out="company.country_id.name"/>
                            <br/>
                            <t t-out="company.phone"/>
    
                            <t t-out="company.email"/>
                        </p>
                    </div>
                </div>
            </div>

            <div>
                <span>Payment Receipt:<span class="ms-1"><t t-esc="doc.display_name"/></span></span>
            </div>

            <div>
                <div>
                    <span>Payment Date:<span class="ms-1"><t t-esc="doc.date"/></span></span><br/>
                    <span >Payment Time:<span class="ms-1"><t t-esc="doc.create_date.strftime('%H:%M:%S')"/></span></span><br/>
                    <span>Customer:<span class="ms-1"><t t-esc="doc.partner_id.name"/></span></span><br/>
                    <span>Payment Amount:<span class="ms-1"><t t-esc="doc.amount"/><span class="ms-1">Rs</span></span></span>
                </div>
                <div>
                    <span >Sales Man Name:
                        <span>
                        <t t-esc="data['sales_person']"/>
                        </span>
                    </span><br/>
                    <span>Payment Method:<span class="ms-1"><t t-esc="doc.payment_method_line_id.name"/></span></span><br/>
                    <span>Memo:<span class="ms-1"><t t-esc="doc.memo"/></span></span><br/>
                    <span >Payment Type:</span>
                    <span class="ms-1"><t t-esc="doc.journal_id.name"/></span>
                </div>
            </div>

            <div>
                <table class="thermal-table mt-2">
                    <tr>
                        <th class="fw-bold">INV. DATE</th>
                        <th class="fw-bold">INV. No.</th>
                        <th class="fw-bold">Ref.</th>
                        <th class="fw-bold">Amt</th>
                    </tr>
                    <tbody>
                        <t t-foreach="data['invoices']" t-as="invoice">  
                            <tr>
                                <td style="white-space: nowrap;"><t t-esc="doc.invoice_ids.invoice_date"/></td>
                                <td style="word-break: break-word;"><t t-esc="doc.invoice_ids.name"/></td>
                                <td></td>
                                <td><t t-esc="doc.invoice_ids.amount_total"/></td>
                            </tr>
                            
                            <t t-foreach="invoice['payments']" t-as="payment">
                                <tr>
                                    <td style="white-space: nowrap;"><t t-esc="payment['date']"/></td>
                                    <td><t t-esc="payment['name']"/></td>
                                    <td style="word-break: break-word;"><t t-esc="payment['reference']"/></td>
                                    <td><t t-esc="payment['amount']"/></td>
                                </tr>
                            </t>
                        </t>
                        
                        <tr>
                            <td></td>
                            <td style="word-break: break-word;">Due Amount</td>
                            <td> </td>
                            <td>
                            <t t-esc="data['due_amount']"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="mt-3">
                <span >Ledger Balance (Previous):-</span><br/>
                <span >Ledger Balance (Current):-</span>
            </div>

                <div class="footer" style="width: 100%;border-top: 1px  padding-top: 5px;">
                    <div  style="text-align: right;">FMCG Distributors</div>
                    <div style="text-align: right;">Page <span class="page"/> of <span class="topage"/></div>
                </div>
        </div>

        <p style="page-break-before:always;"/>
    </template>


    <!-- report action -->
    <record id="thermal_custom_payment_ledger_report_action" model="ir.actions.report">
        <field name="name">Thermal Payment Ledger</field>
        <field name="model">account.payment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_payment_ledger.thermal_common_master_template_payment</field>
        <field name="report_file">custom_payment_ledger.thermal_common_master_template_payment</field>
        <field name="binding_model_id" ref="account.model_account_payment"/>
        <field name="binding_type">report</field>
    </record>

</odoo>