<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- report master template -->
    <template id="common_master_template_payment">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <t t-if="not o" t-set="o" t-value="doc" />
                <t t-if="not company">
                    <!-- Multicompany -->
                    <t t-if="company_id">
                        <t t-set="company" t-value="company_id" />
                    </t>
                    <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                        <t t-set="company" t-value="o.company_id.sudo()" />
                    </t>
                    <t t-else="else">
                        <t t-set="company" t-value="res_company" />
                    </t>
                </t>
                <t t-foreach="docs" t-as="doc">
                    <t t-call="custom_payment_ledger.customer_payment_ledger"/>
                </t>

            </t>
        </t>
    </template>

    <!-- Payment Ledger -->
    <template id="customer_payment_ledger" name="usa_commercial">
        <t t-set="data" t-value="doc.payment_ledger()"/>
        <div class="row">
            <div class="col-6">
                <div class="text-start">
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height:100px; width:100px;" alt="Logo" />
                </div>
            </div>
            <div class="col-6">
                <div class="container text-end" style="font-weight: bold; ">
                    <h style="font-size: 20px;">
                        <t t-out="env.company.name"/>
                    </h>
                    <p>
                        <t t-out="company.street"/>
                        <t t-out="company.city"/>
                        <t t-out="company.country_id.name"/>
                        <br/>
                        <t t-out="company.phone"/>

                        <t t-out="company.email"/>
                    </p>
                </div>
            </div>
        </div>

        <div>
            <span class="fw-bold" style="font-size:30px;">Payment Receipt:<span class="ms-2"><t t-esc="doc.display_name"/></span></span>
        </div>

        <div class="row">
            <div class="col-6">
                <span>Payment Date:<span class="ms-2"><t t-esc="doc.date"/></span></span><br/>
                <span class="text-danger">Time:-<span class="ms-1"><t t-esc="doc.create_date.strftime('%H:%M:%S')"/></span></span><br/>
                <span>Customer:<span class="ms-2"><t t-esc="doc.partner_id.name"/></span></span><br/>
                <span>Payment Amount:<span class="ms-2"><t t-esc="doc.amount"/><span class="ms-2">Rs</span></span></span>
            </div>
            <div class="col-6">
                <span class="text-danger">Sales Man Name:<span class="ms-2"><t t-esc="data['sales_person']"/></span></span><br/>
                <span>Payment Method:<span class="ms-2"><t t-esc="doc.payment_method_line_id.name"/></span></span><br/>
                <span>Memo:<span class="ms-2"><t t-esc="doc.memo"/></span></span><br/>
                <span class="text-danger">Payment Type:</span>
                <span class="ms-2"><t t-esc="doc.journal_id.name"/></span>
            </div>
        </div>

        <div>
            <table border="1" style="width:100%;">
                <tr>
                    <th class="fw-bold">DATE</th>
                    <th class="fw-bold">NAME</th>
                    <th class="fw-bold">REFERENCE</th>
                    <th class="fw-bold">AMOUNT</th>
                </tr>
                
                <t t-foreach="data['invoices']" t-as="invoice">     
                    <tr>
                        <td><span class="ms-2"><t t-esc="invoice['date']"/></span></td>
                        <td><span class="ms-2"><t t-esc="invoice['name']"/></span></td>
                        <td><span class="ms-2"><t t-esc="invoice['reference']"/></span></td>
                        <td><div class="text-end me-2"><t t-esc="invoice['amount']"/></div></td>
                    </tr>

                    <t t-foreach="invoice['payments']" t-as="payment">
                        <tr>
                            <td><span class="ms-2"><t t-esc="payment['date']"/></span></td>
                            <td><span class="ms-2"><t t-esc="payment['name']"/></span></td>
                            <td><span class="ms-2"><t t-esc="payment['reference']"/></span></td>
                            <td><div class="text-end me-2"><t t-esc="payment['amount']"/></div></td>
                        </tr>
                    </t>
                </t>
                <tr>
                    <td></td>
                    <td><span class="ms-2">Due Amount</span></td>
                    <td> </td>
                    <td>
                    <div class="text-end me-2"><t t-esc="data['due_amount']"/></div>
                    </td>
                </tr>
            </table>
        </div>

        <div class="mt-3">
            <span class="text-danger">Ledger Balance (Previous):-</span><br/>
            <span class="text-danger">Ledger Balance (Current):-</span>
        </div>

            <div class="footer" style="width: 100%;border-top: 1px  padding-top: 5px;">
                <div class="text-danger" style="text-align: right;">FMCG Distributors</div>
                <div style="text-align: right;">Page <span class="page"/> of <span class="topage"/></div>
            </div>
        <p style="page-break-before:always;"/>
    </template>


    <!-- report action -->
    <record id="custom_payment_ledger_report_action" model="ir.actions.report">
        <field name="name">Payment Ledger</field>
        <field name="model">account.payment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_payment_ledger.common_master_template_payment</field>
        <field name="report_file">custom_payment_ledger.common_master_template_payment</field>
        <field name="binding_model_id" ref="account.model_account_payment"/>
        <field name="binding_type">report</field>
    </record>

</odoo>