<odoo>
    <record id="view_purchase_order_form_discount" model="ir.ui.view">
        <field name="name">purchase.order.form.discount</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tax_totals']" position="after">
                <div class="d-flex float-end" colspan="2" groups="base.group_user">
                    <label for="amount_discount"/>
                    <div>
                        <field name="amount_discount" class="oe_inline"/>
                    </div>
                </div>
            </xpath>
            <xpath expr="//field[@name='tax_totals']" position="before">
                <div class="float-end d-flex gap-1 mb-2" name="so_button_below_order_lines">
                    <button string="Discount" name="action_open_discount_wizard" type="object" class="btn btn-secondary" invisible="invoice_count != 0"/>
                </div>
            </xpath>

        </field>
    </record>
</odoo>