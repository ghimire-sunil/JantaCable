<odoo>
    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tax_totals']" position="before">
                <div class="float-end d-flex gap-1 mb-2" name="Po_button_below_order_lines">
                    <button string="Discount" name="action_open_discount_wizard" type="object" class="btn btn-secondary" invisible="state !='draft'"/>
                </div>
            </xpath>
            <xpath expr="//field[@name='tax_totals']" position="after">
                <div class="d-flex float-end" colspan="2" groups="base.group_user">
                    <label for="amount_discount"/>
                    <div>
                        <field name="amount_discount" class="oe_inline"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>