<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_purchaseorder_document_inherit_discount" inherit_id="purchase.report_purchaseorder_document">
            <xpath expr="//div[@id='total']" position="replace">
                <div id="total" class="row justify-content-end mt-n3">
                    <div class="col-4">
                        <table class="o_total_table table table-borderless">
                            <t t-if="o.amount_discount">
                                <tr >
                                    <td>
                                    Discount
                                    </td>
                                    <td class="text-end">
                                        <span t-field="o.amount_discount"/>
                                    </td>
                                </tr>
                            </t>
                            <t t-set="tax_totals" t-value="o.tax_totals"/>
                            <t t-set="currency" t-value="o.currency_id"/>
                            <t t-call="purchase.document_tax_totals"/>
                        </table>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>