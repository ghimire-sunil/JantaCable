<odoo>
    <record id="view_sale_report_wizard_form" model="ir.ui.view">
        <field name="name">sale.report.wizard.form</field>
        <field name="model">sale.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Sales Report Wizard">
                <group>
                    <field name="date_selected"/>
                    <field name="product_category" widget="many2many_tags"/>
                </group>
                <footer>
                    <button string="Generate Report"
                            type="object"
                            name="action_generate_report"
                            class="btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>