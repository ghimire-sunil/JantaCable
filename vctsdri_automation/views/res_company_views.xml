<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View res.company form -->
    <record id="view_res_company_inherit_form" model="ir.ui.view">
        <field name="name">view.res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state_id']" position="before">
                <field name="district_id" domain='[("country_id", "=", country_id)]' placeholder="District"/>
            </xpath>
        </field>
    </record>

</odoo>