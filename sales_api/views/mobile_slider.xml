<odoo>
    <data>

        <!--list view-->
        <record id="tree_mobile_slider" model="ir.ui.view">
            <field name="name">Slider Images list</field>
            <field name="model">mobile.slider</field>
            <field name="arch" type="xml">
                <list string="Slider Images">
                    <field name="name" />
                    <field name="file_type" />
                    <field name="create_date" />
                    <field name="active" />
                </list>
            </field>
        </record>

        <!--form
        view-->
        <record id="form_mobile_slider" model="ir.ui.view">
            <field name="name">Slider Images Form</field>
            <field name="model">mobile.slider</field>
            <field name="arch" type="xml">
                <form string="Slider Images">
                    <sheet>

                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button"
                                icon="fa-archive">
                                <field name="active" widget="boolean_button"
                                    options="{&quot;terminology&quot;: &quot;archive&quot;}" />
                            </button>
                        </div>
                        <field name="image" widget="image" style="height: 300 px; width: 300px;" />

                        <group name="group_top">
                            <group name="group_left">
                                <field name="name" />
                                <field name="file_type" />
                            </group>
                            <group name="group_right">
                                <field name="create_date" readonly="True" />
                                <field name="description" />
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

