<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="delivery_boy_sale_order_inherit" model="ir.ui.view">
        <field name="name">delivery_boy.sale.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <div class="oe_button_box" position="inside">
                <button name="action_view_collected_cash" type="object" class="oe_stat_button"
                    icon="fa-money" invisible="delivery_boy_payments_count == 0">
                    <field name="delivery_boy_payments_count" widget="statinfo"
                        string="Collected Cash" />
                </button>
            </div>
        </field>
    </record>
</odoo>