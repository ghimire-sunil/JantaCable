<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="delivery_boy.stock_picking_inherit_form">
        <field name="name">WH Form Inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">

            <xpath expr="//form" position="inside">
                <field name="picking_count" invisible="1" />
            </xpath>
            <xpath expr="//header" position="inside">
                <button
                    invisible="picking_count != 0 or state == 'done'  or picking_type_code != 'outgoing'"
                    name="action_open_assigned_wizard" string="Assigned Delivery"
                    type="object" class="oe_highlight" groups="base.group_user" />
            </xpath>
            <xpath expr="//sheet/div[@class='oe_button_box']" position="inside">
                <button name="action_view_delivery_boy_picking" class="oe_stat_button"
                    icon="fa-truck"
                    type="object" help="Delivery Boy Picking"
                    invisible="picking_count == 0 ">
                    <div class="o_form_field o_stat_info">
                        <span class="o_stat_text">Delivery Boy's Picking</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>