<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="delivery_route_action" model="ir.actions.act_window">
            <field name="name">Delivery Route</field>
            <field name="res_model">delivery.route</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="delivery_route_view_list" model="ir.ui.view">
            <field name="name">delivery.route.view.list</field>
            <field name="model">delivery.route</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" />
                    <field name="state_id" />
                    <field name="next_delivery_schedule" optional="show"/>
                </list>
            </field>
        </record>


        <record id="delivery_route_view_form" model="ir.ui.view">
            <field name="name">delivery.route.view.form</field>
            <field name="model">delivery.route</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <div>
                            <h1 style="font-size: 1.9rem;">
                                <div class="row">
                                    <div class="col-12">
                                        <label for="name" string="Route Name"/>
                                        <div>
                                            <field name="name" placeholder="e.g. Route A" style="width:80% !important;"/>
                                        </div>
                                    </div>
                                </div>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="company_id" />
                            </group>
                            <group>
                                <field name="next_delivery_schedule" optional="show"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="schedule" string="Schedule">
                                <field name="delivery_schedules" nolabel="1">
                                    <list>
                                        <field name="user_id" />
                                        <field name="delivery_schedule_day" />
                                        <field name="next_delivery_schedule" />
                                    </list>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="route_id" readonly="1"/>
                                                <field name="user_id" />
                                            </group>
                                            <group>
                                                <field name="delivery_schedule_day" />
                                                <field name="next_delivery_schedule" />
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>


        <menuitem id="contact_route_delivery_route_menu" name="Delivery Route" action="delivery_route_action" parent="stock.menu_warehouse_config" sequence="10" />

    </data>


</odoo>