<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_ird" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.base.traccar</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="0"/>
            <field name="inherit_id" ref="fleet.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//app[@id='fleet']" position="inside">
                    <block title="Traccar Integration" id="fleet_traccar_odoo_general_setting">
                        <div class="row mt16 o_settings_container">
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label class="col-md-3 o_light_label" for="url" string="Geotrack URL"/>
                                        <field name="url"/>
                                    </div>
                                </div>
                            </div>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label class="col-md-3 o_light_label" for="traccar_username" string="Geotrack Username"/>
                                        <field name="traccar_username"/>
                                    </div>
                                    <div class="row mt16">
                                        <label class="col-md-3 o_light_label" for="traccar_password" string="Geotrack Password"/>
                                        <field name="traccar_password" password="True"/>
                                    </div>
                                    <div class="row mt16">
                                        <label class="col-md-3 o_light_label" for="traccar_token" string="Geotrack API Token"/>
                                        <field name="traccar_token" password="True"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </block>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
