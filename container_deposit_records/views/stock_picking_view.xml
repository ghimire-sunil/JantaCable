<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_picking_container_deposit_view" model="ir.ui.view">
        <field name="name">stock.picking.container.deposit.view</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">

            <field name="state" position="after">
                <field name="container_deposit_id" invisible="1"/>
            </field>
            
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object"
                    name="action_view_container_deposit"
                    class="oe_stat_button" icon="fa-life-ring" invisible="not container_deposit_id">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Container Deposit</span>
                    </div>
                </button>
            </xpath>
            
        </field>
    </record>

</odoo>