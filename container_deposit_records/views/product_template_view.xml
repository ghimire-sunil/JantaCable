<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_container_deposit_view" model="ir.ui.view">
        <field name="name">product.template.container.deposit.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_tooltip']" position="after">
                <field name="is_container_deposit" string="Is Container Deposit"/>
            </xpath>
            <xpath expr="//page[@name='invoicing']/group[@name='properties']/group/field[@name='property_account_income_id']" position="attributes">
                <attribute name="invisible">is_container_deposit</attribute>
            </xpath>
            <xpath expr="//page[@name='invoicing']/group[@name='properties']/group/field[@name='property_account_income_id']" position="after">
                <field name="property_account_income_id"
                    groups="account.group_account_readonly"
                    domain="['&amp;', ('deprecated', '=', False), ('account_type', '=', 'liability_current')]"
                    invisible="not is_container_deposit" required="is_container_deposit"/>
            </xpath>
        </field>
    </record>

</odoo>