<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_payment_receipt">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="doc" t-value="o"/>
                    <t t-call="web.external_layout">
                        <t t-set="doc" t-value="doc.with_context(lang=o.partner_id.lang)" />
                       <strong> <h2>CERTIFICATE OF DEPOSIT</h2></strong>
                            <h2><strong style="color: black;"><span>Order #</span>
                            <span t-field="doc.name">SO0000</span></strong></h2>
                        <div class="page">
                            <t t-set="address">
                                <div t-field="doc.partner_id"
                                    t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                                <p t-if="doc.partner_id.vat">
                                    <t t-if="doc.company_id.account_fiscal_country_id.vat_label" t-out="doc.company_id.account_fiscal_country_id.vat_label"/>
                                    <t t-else="">Tax ID</t>:
                                    <span t-field="doc.partner_id.vat"/>
                                </p>
                            </t>
                            <div class="oe_structure"/>
                            <div class="row mb-4" id="informations">
                                <div class="col" name="informations_date">
                                    <strong>Order Date</strong>
                                    <div t-esc="doc.order_date"/>
                                </div>
                                <div class="col">
                                    <strong>Salesperson</strong>
                                    <div t-esc="doc.delivery_boy.name"/>
                                </div>
                            </div>
                            <div class="oe_structure"></div>
                            <table class="o_has_total_table table o_main_table table-borderless">
                                <thead style="display: table-row-group">
                                    <tr>
                                        <th name="th_description" class="text-start">Description</th>
                                        <th name="th_quantity" class="text-end text-nowrap">Quantity</th>
                                        <th name="th_priceunit" class="text-end text-nowrap">Unit Price</th>
                                        <th name="th_subtotal" class="text-end">
                                            <span>Amount</span>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody class="sale_tbody">
                                    <tr>
                                        <td class="text-start">Container Deposit</td>
                                        <td class="text-end">
                                            <t t-esc="doc.container_quantity"/>
                                        </td>
                                        <td class="text-end">
                                            <t t-esc="doc.unit_price"/>
                                        </td>
                                        <td class="text-end">
                                            <t t-esc ="doc.total_price"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="col-6 ms-auto" name="total">
                                <table class="o_total_table table table-borderless">
                                    <tr>
                                        <td><strong style="color: blue;">Total</strong></td>
                                        <td class="text-end" style="color: blue;">
                                            <t t-esc="doc.total_price"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
        <record id="container_report_payment_receipt" model="ir.actions.report">
            <field name="name">Reports</field>
            <field name="model">container.deposit.records</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">container_deposit_records.report_payment_receipt</field>
            <field name="report_file">container_deposit_records.report_payment_receipt</field>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>